<!DOCTYPE html>
<html lang="en">
  <head>
      <!-- Meta, title, CSS, favicons, etc. -->
      <meta charset="utf-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <meta name="keywords" content="Testing, Linux, Qemu">
      <meta name="author" content="contributors">
      % my $appname_safe = stash('appname') // "Default app";
      % if ($title) {
      <title><%= $appname_safe . ": " . title %></title>
      % } else
      % {
      <title><%= $appname_safe %></title>
      % }

      <!-- Bootstrap core CSS -->
      %= asset 'bootstrap.css'
      %= asset 'bootstrap.js'

      %= content_for 'head'

      %= javascript begin
          %= content_for 'head_javascript'
          $(function() {
          setupForAll();
          %= content_for 'ready_function'
          } );
      % end

      <link rel="icon"
            type="image/png" sizes="16x16"
            href="<%= icon_url 'logo-16.png' %>">
      <link rel="icon" href="<%= icon_url 'logo.svg'%>" sizes="any" type="image/svg+xml">

  </head>
  <body>
      <nav class="navbar navbar-static-top navbar-default">
          <div class="container">
          </div>
      </nav>
      <div class="container" id="content">
          %= content
      </div>
      <footer class='footer'>
        <div class='container'>
        </div>
      </footer>
  </body>
</html>
